{
  "compilerOptions": {
    "jsx": "react",
    "target": "es5",
    "lib": [
      "es2015",
      "dom"
    ],
    "module": "commonjs",
    "declaration": true,
    "allowJs": false,
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declarationDir": "dist/typings"
  },
  "exclude": [
    "node_modules",
    "src/__tests__/**/*.{ts,tsx}"
  ]
}
